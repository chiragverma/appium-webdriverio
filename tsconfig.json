{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "lib": [ "ES2016" ],
        "target": "ES2016",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/sauce-service",
        ]
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
    ]
}